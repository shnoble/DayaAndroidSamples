<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/show_simple_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Notification"/>

    <Button
        android:id="@+id/show_expandable_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expandable Notification"/>

    <Button
        android:id="@+id/update_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Notification"/>

</LinearLayout>